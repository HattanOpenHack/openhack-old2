pipeline{
      agent  { node { label 'master' } }
      environment {
        BUID_TAG = "poipr${env.BUILD_NUMBER}"
      }
stages
{
    stage('setup')
    {
      steps
      {
        withCredentials([[$class: 'UsernamePasswordMultiBinding',
        credentialsId: 'acr-creds',
        usernameVariable: 'ACR_USER',
        passwordVariable: 'ACR_PASSWORD']])
        {
          sh  "docker login ${ACR_ENDPOINT} -u '${ACR_USER}' -p '${ACR_PASSWORD}'"
        }   
      }
    }
    stage('build')
    {
      steps
      {
        sh "docker build -t ${ACR_ENDPOINT}/jenkins/api-poi:${BUID_TAG} $WORKSPACE/apis/poi/web"
      }
    }
    stage('push')
    {
      steps
      {
        sh  "docker push ${ACR_ENDPOINT}/jenkins/api-poi:${BUID_TAG}"
      }
    }    
}

}